{
    "compilerOptions": {
      "target": "ES6",                        
      "module": "commonjs",                    
      "lib": ["es6"],                          
      
      "esModuleInterop": true,                 
      "resolveJsonModule": true,           
  
      "outDir": "./dist",                       
      "rootDir": "./",                        
      "strict": true,                           
  
      "types": ["node"],                         
      "skipLibCheck": true,                      

      "forceConsistentCasingInFileNames": true,  
      "moduleResolution": "node",                
      "allowSyntheticDefaultImports": true,      
      "noImplicitAny": true                      
    },
    "include": ["src", "controller", "dtos", "exceptions", "middlewares", "models", "router", "service", "index.ts"],                          
    "exclude": ["node_modules", "dist"]          
  }